    // Google Tag Manager (noscript)
    noscript
      iframe(src="https://www.googletagmanager.com/ns.html?id=GTM-PGQ9WQT", height="0", width="0", style="display:none;visibility:hidden")
    
    .container
      .info-box
        h1 Leaflet.js 繪製 Open Street Map
        h6 筆記文：
          a(href="https://letswrite.tw/leaflet-osm-basic/") Let's Write
        hr
        .btn-group
          a#put-markers.btn(href="#") 連續放置 Markers
          a#zoom-out.btn(href="#") Zoom Out
          a#zoom-in.btn(href="#") Zoom In

        //- 使用其它圖層（地圖外的按鈕）
        .btn-group
          a.js-change-layer.btn(href="#", data-layer="https://{s}.tile.openstreetmap.de/tiles/osmde/{z}/{x}/{y}.png") OpenStreetMap.DE
          a.js-change-layer.btn(href="#", data-layer="https://{s}.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png") OpenStreetMap.HOT
          a.js-change-layer.btn(href="#", data-layer="https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png") OpenTopoMap

      //- 地圖
      #map

    script(src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js")
    script(src="dist/main.min.js")